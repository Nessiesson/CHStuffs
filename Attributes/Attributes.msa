*:/attribute add $attribute = >>>
	@item = pinv(player(), null);
	if(is_null(@item)) {
		die(colorize('&cYou\'re not holding anything in your hand.'));
	}
	if(_attributes_item_has_attribute(@item, $attribute)) {
		die(colorize('&cItem already has attribute &6' . $attribute . '&c.'));
	};
	@itemWithAttribute = _attributes_item_add_attribute($attribute, @item);
	if(is_null(@itemWithAttribute)) {
		die(colorize('&cAttribute &6' . $attribute . ' &cdoesn\'t exist.'));
	}
	@slot = pinfo(player(), 15);
	@inv = associative_array();
	@inv[@slot] = @itemWithAttribute;
	set_pinv(player(), @inv);
<<<